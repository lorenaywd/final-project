{% extends 'base.html.twig' %}

{% block title %}{% trans %}Operation{% endtrans %}{% endblock %}

{% block body %}
<section class="home">
    <div class="text">
    <h1>{% trans %}Operation{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Invoice{% endtrans %}</th>
                <td>{{ operation.facture }}</td>
            </tr>
            <tr>
                <th>{% trans %}Comment{% endtrans %}</th>
                <td>{{ operation.comment }}</td>
            </tr>
            <tr>
                <th>{% trans %}Note{% endtrans %}</th>
                <td>{{ operation.note }}</td>
            </tr>
            <tr>
                <th>{% trans %}Start Date{% endtrans %}</th>
                <td>{{ operation.dateDebut ? operation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}End Date{% endtrans %}</th>
                <td>{{ operation.dateFin ? operation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Result Image{% endtrans %}</th>
                <td>{{ operation.imageResultat }}</td>
            </tr>
            <tr>
                <th>{% trans %}Complaint{% endtrans %}</th>
                <td>{{ operation.reclamation }}</td>
            </tr>
            <tr>
                <th>{% trans %}Payment Status{% endtrans %}</th>
                <td>{{ operation.statusPaiement ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>{% trans %}Operation Status{% endtrans %}</th>
                <td>{{ operation.statusOperation ? 'Yes' : 'No' }}</td>
            </tr>
            {# <tr> #}
                {# <th>Address Intervention</th> #}
                {# <td>{{ operation.addressIntervention }}</td> #}
            {# </tr> #}
        </tbody>
    </table>

    <a href="{{ path('app_operation_index') }}">{% trans %}Back to List{% endtrans %}</a>

    {# <a href="{{ path('app_operation_edit', {'id': operation.id}) }}">edit</a> #}

    {# {{ include('operation/_delete_form.html.twig') }} #}
    </section>
    </div>
{% endblock %}

