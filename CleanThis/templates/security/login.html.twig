{% extends 'basebis.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card border-0 shadow rounded-3 my-5">
					<div class="card-body p-4 p-sm-5">
						<h5 class="card-title text-center mb-5 fw-light fs-5">{% trans %}Sign In{% endtrans %}</h5>
            	{% if app.user %}
		            <div class="mb-3">
			            {% trans %}You are logged in as {% endtrans %}
			            {{ app.user.userIdentifier }},
			            <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
		                </div>
	            {% endif %}
              {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              {% endif %}
              <form method="post">
                <div class="form-floating mb-3">
                	<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                  <label for="inputEmail">{% trans %}Email address{% endtrans %}</label>
                </div>
                <div class="form-floating mb-3">
                	<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                  <label for="inputPassword">{% trans %}Password{% endtrans %}</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" value="" id="rememberPasswordCheck">
                  <label class="form-check-label" for="rememberPasswordCheck">
                    {% trans %}Remember password{% endtrans %}
                  </label>
                </div> #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="d-grid">
                  <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                  {% trans %}Sign in{% endtrans %}</button>
				  <a href="{{ path('forgotten_password')}}" style="text-decoration:none; text-align: center; margin-top: 10px">{% trans %} Forgotten Password ? {% endtrans %}</a>
							</div>
							<hr class="my-4">
							<div class="d-grid mb-2">
								<a href="{{ path('auth_oauth_connect', {service: 'google'}) }}" class="btn btn-google btn-login text-uppercase fw-bold" type="submit">
									<i class="fab fa-google me-2"></i>
									<img src="{{ asset('images/logoGoogle.png') }}" style="width: 40px;">{% trans %}Sign in with Google{% endtrans %}
								</a>
							</div>
							<div
								class="d-grid">{# <a class="btn btn-facebook btn-login text-uppercase fw-bold" type="submit">
									                  <i class="fab fa-facebook-f me-2"></i> Sign in with Facebook
									                </a> #}
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>{% endblock %}	